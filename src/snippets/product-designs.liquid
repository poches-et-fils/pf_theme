<div class="product-designs-container">
	<div class="product-designs__loading">
		{% include 'spinner' %}
	</div>

	<div class="product-designs__loaded">
		<div class="product--form--price" data-price-wrapper>
			{% include 'product-design' %}

			{% if product.compare_at_price_max > product.price %}
				<span class="visually-hidden" data-compare-text>{{ 'products.product.regular_price' | t }}</span>
				<s data-compare-price>
					{% if current_variant.compare_at_price > current_variant.price %}
						{{ current_variant.compare_at_price | money }}
					{% endif %}
				</s>
			{% endif %}
		</div>

		<div class="product-design-list-container">
			<div class="variant--selector--bar w-clearfix">
				<div class="selector--heading--left">
					<strong>Design: </strong> 
					<span></span>
				</div>
				<div class="selector--heading--right"> 
					<a href="#" class="see-all-designs">See all</a>
				</div>
			</div>

			<div class="product-designs glide">
				<div class="glide__track" data-glide-el="track">
					<ul class="glide__slides">
						{% comment %} Slides generated by product-designs.js {% endcomment %}
					</ul>
				</div>

				<div class="glide__arrows" data-glide-el="controls">
					<a class="glide__arrow glide__arrow--left" data-glide-dir="<">{% include 'icon-chevron' %}</a>
					<a class="glide__arrow glide__arrow--right" data-glide-dir=">">{% include 'icon-chevron' %}</a>
				</div>
			</div>
		</div>
	</div>
</div>