<script src="https://code.jquery.com/jquery-3.3.1.min.js" type="text/javascript" intergrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.rawgit.com/mikhailarden/Shopify-OpenSource/1b3c1c33/Slider%20Section/slider--components.css">
<link rel="stylesheet" type="text/css" href="https://cdn.rawgit.com/mikhailarden/Shopify-OpenSource/master/Slider%20Section/normalize.css">
<script src="https://cdn.rawgit.com/mikhailarden/Shopify-OpenSource/master/Slider%20Section/components.js"> </script>



<div class="slider--section">
  <div data-delay="4000" data-animation="cross" data-autoplay="1" data-duration="500" data-infinite="1"  class="slider--section--slider w-slider">
    <div class="w-slider-mask">

      {% for block in section.blocks %}
      <div class="home--slider {% if forloop.index == 1 %}one{% elsif forloop.index == 2 %}two{%else%}three{%endif%} w-slide"
           {% if block.settings.color %} style="background-color: {{block.settings.color}};" {%endif%}
           >

        <div class="slider--image--overlay
                    {%if block.settings.flextext == 'text--left' %}left-align {%endif%}
                    {%if block.settings.flextext == 'text---center' %}centered {%endif%}
                    {%if block.settings.flextext == 'text-right' %}right-align {%endif%}"

             style=" background-image: url('{{block.settings.image | img_url: '1000x1000'}}');
                    background-position: {% if block.settings.bg-position == 'center' %}center {%endif%} {% if block.settings.bg-position == 'left' %}left {%endif%} {% if block.settings.bg-position == 'right' %}right {%endif%};
                    
                    ">


          <h1 class="slider--heading--main {{block.settings.flextext}}"  style="font-size: 55px;font-weight: 500;color: #fff;text-transform: uppercase; {%if block.settings.flextext == 'text---center' %}text-align: center;{%endif%}{%if block.settings.flextext == 'text-right' %}text-align: right; {%endif%}"> {{ block.settings.heading }}</h1>
          <h3 class="slider--heading--text" style="font-size: 20px;color: #fff;{%if block.settings.flextext == 'text---center' %}text-align: center;{%endif%}{%if block.settings.flextext == 'text-right' %}text-align: right; {%endif%}"> {{ block.settings.subtitle }}</h3>

          {% if block.settings.btn %}
          <a href="{{block.settings.url}}" style="border: 3px solid #fff;background-color: transparent;font-weight: 500;" class="slider--button--main w-button">{{block.settings.btn}}</a></div>
        {%endif%}
      </div>


      {%endfor%}

    </div>


    <div class="slider--section--hideen--arrows w-slider-arrow-left">
      <div class="w-icon-slider-left"></div>
    </div>
    <div class="slider--section--hideen--arrows w-slider-arrow-right">
      <div class="w-icon-slider-right"></div>
    </div>
    <div class="w-slider-nav w-shadow w-round"></div>
  </div>
</div>

{%comment%}
Style Overrides to match merchant theme
{%endcomment%}

<style>
  /* style goes here */
  
  .slider--button--main:hover {
  background-color: #fff!important;
color: #000;
    transition-duration: 800ms;
  }

  .w-slider {height: 60vh!important; }
  .slider--container {height: 60vh!important;}
  
  @media screen and (max-height: 900px) {
    .slider--heading--main {
      font-size: 25px !important;
      position: absolute !important;
      top: 5px !important;
    }
    
    .slider--heading--text {
      font-size: 15px !important;
      position: absolute;
      top: 19%;
    }
    
    a.slider--button--main.w-button {
      position: absolute;
      top: 150px;
     
    }
    
    .w-slider-nav.w-shadow.w-round {
      display: none;
    }
    
    .slider--image--overlay.centered {
      background-size: 280px;
    }
  }
  
  @media (max-width: 796px) {
  
    .slider--image--overlay {justify-content: baseline!important;background-position: bottom!important;}
    .slider--heading--text {text-align:center!important;}
    
    
  }
  

</style>

