<div data-section-id="{{ section.id }}" data-section-type="designs">
	<script type="application/json" data-design-json>
		[
		{%- for block in section.blocks -%}
			{
				"name": "{{ block.settings.name | downcase | escape }}",
				"image": "{{ block.settings.image | img_url: '400x' }}",
				"imageAlternate": "{%- if block.settings.image_alternate != blank -%}{{ block.settings.image_alternate | img_url: '400x' }}{%- endif -%}",
				"swatch": "{{ block.settings.swatch | img_url: '400x' }}",
				"swatchAlternate": "{%- if block.settings.swatch_alternate != blank -%}{{ block.settings.swatch_alternate | img_url: '400x' }}{%- endif -%}",
				"title": "{{ block.settings.title | escape }}",
				"tagline": "{{ block.settings.tagline | escape }}",
				"category": "{{ block.settings.category | escape }}"
			}{%- unless forloop.last -%},{%- endunless -%}
		{% endfor %}
		]
	</script>
</div>

{% schema %}
{
  "name": "Designs",
  "settings": [],
	"blocks": [{
		"type": "design",
		"name": "Design",
		"settings": [{
			"id": "name",
			"type": "text",
			"label": "Vendor Name",
			"info": "The vendor name of the design must exactly match the vendor field on products that use the design"
		}, {
			"id": "image",
			"type": "image_picker",
			"label": "Main Image",
			"info": "Large design image that shows on product pages"
		}, {
			"id": "image_alternate",
			"type": "image_picker",
			"label": "Alternate Main Image",
			"info": "An alternate optional large design image that shows for non-pocket type products"
		}, {
			"id": "swatch",
			"type": "image_picker",
			"label": "Swatch Image",
			"info": "Square design image that shows where designs are listed, minimum of 280x280px recommended"
		}, {
			"id": "swatch_alternate",
			"type": "image_picker",
			"label": "Alternate Swatch Image",
			"info": "An alternate optional square design swatch image that shows for non-pocket type products"
		}, {
			"id": "title",
			"type": "text",
			"label": "Title",
			"info": "Shows on the product page and when hovering over items in the all designs view. Example, 'Got Milk?'"
		}, {
			"id": "tagline",
			"type": "text",
			"label": "Tagline",
			"info": "A short optional line of text that sits under the title on product pages. Example, '#los tabernacos de tacos'"
		}, {
			"id": "category",
			"type": "text",
			"label": "Category",
			"info": "Designs will be grouped based on the text entered here"
		}]
	}]
}
{% endschema %}