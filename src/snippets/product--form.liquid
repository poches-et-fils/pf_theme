  .thumbnail-scrollbar { flex-basis: 10% !important; }

  .main-product-view { flex-basis: 40% !important; }

  .product-thumbnails {
    display: flex;
    flex-basis: 40% !important;
    flex-flow: row wrap;
  }

  .products-container > * {
