const getRandImg = (urlParams, returnArray) => {
  // Receives a shirt type
  // and select an adecuate image bg
  const searchParams = []
 
  let models = [
    '{{ "model--Sweatshirt--Men--Black.png" | asset_url }}',
    '{{ "model--Sweatshirt--Men--Burgundy.png" | asset_url }}',
    '{{ "model--Sweatshirt--Men--Navy.png" | asset_url }}',
    '{{ "model--Sweatshirt--Men--White.png" | asset_url }}',
    '{{ "model--Sweatshirt--Women--Black.png" | asset_url }}',
    '{{ "model--Sweatshirt--Women--Burgundy.png" | asset_url }}',
    '{{ "model--Sweatshirt--Women--Navy.png" | asset_url }}',
    '{{ "model--Sweatshirt--Women--White.png" | asset_url }}',
    '{{ "model--T-Shirt--Baby--Black.png" | asset_url }}',
    '{{ "model--T-Shirt--Baby--Dark-Grey.png" | asset_url }}',
    '{{ "model--T-Shirt--Baby--White.png" | asset_url }}',
    '{{ "model--T-Shirt--Kid--Black.png" | asset_url }}',
    '{{ "model--T-Shirt--Kid--Dark-Grey.png" | asset_url }}',
    '{{ "model--T-Shirt--Kid--White.png" | asset_url }}',
    '{{ "model--T-Shirt--Men--Black.png" | asset_url }}',
    '{{ "model--T-Shirt--Men--Dark-Grey.png" | asset_url }}',
    '{{ "model--T-Shirt--Men--Grey.png" | asset_url }}',
    '{{ "model--T-Shirt--Men--White.png" | asset_url }}',
    '{{ "model--T-Shirt--Women--Black.png" | asset_url }}',
    '{{ "model--T-Shirt--Women--Dark-Grey.png" | asset_url }}',
    '{{ "model--T-Shirt--Women--Grey.png" | asset_url }}',
    '{{ "model--T-Shirt--Women--White.png" | asset_url }}',
    '{{ "model--Tank-Top--Men--Black.png" | asset_url }}',
    '{{ "model--Tank-Top--Men--Dark-Grey.png" | asset_url }}',
    '{{ "model--Tank-Top--Men--White.png" | asset_url }}',
    '{{ "model--Tank-Top--Women--Black.png" | asset_url }}',
    '{{ "model--Tank-Top--Women--Dark-Grey.png" | asset_url }}',
    '{{ "model--Tank-Top--Women--White.png" | asset_url }}',
    '{{ "model--V-Neck--Women--Black.png" | asset_url }}',
    '{{ "model--V-Neck--Women--Dark-Grey.png" | asset_url }}',
    '{{ "model--V-Neck--Women--Grey.png" | asset_url }}',
    '{{ "model--V-Neck--Women--White.png" | asset_url }}'
  ]

  if(urlParams) {
    urlParams.map(param => searchParams.push(param.split('=')[1]))
  }

  if(searchParams.length) {
    models = models.filter(model => {
      /* IF `searchParams` has at least an item
       * THEN look up in `models`
       * FOR URLs that match the params received
       * (that is -> correctModel === true)
       */
      let correctModel = true
      if (model)
        searchParams.map(param => { 
          if (!model.includes(`--${param}`)) {
            correctModel = false 
          }
        })
        return correctModel
    })
  }

  // Choose a random available image from the array
  if (returnArray) {
    return models
  } else {
    return models[Math.floor(Math.random() * models.length)]
  }
}
