  <div data-section-id="{{ section.id }}" data-section-type="slider-section">
  
  <div class="slider--section">
   
   
    <div data-animation="slide" data-nav-spacing="6" data-duration="500" data-infinite="1" class="slider--section--slider w-slider">
      
      <div class="w-slider-mask">

        {% for block in section.blocks %} 
        <div class="home--slider text--center w-slide">
          <h1 class="slider--heading--main">{{ block.settings.blockheading }} </h1>
          <h3 class="slider--heading--text">{{ block.settings.blockparagraph }} </h3>
          <a href="{{ block.settings.link }}" class="slider--button--main w-button">{{ block.settings.linktext }}</a></div>
        <div class="w-slide"></div>
{%endfor%}

      </div>

      <div class="slider--section--hideen--arrows w-slider-arrow-left">
        <div class="w-icon-slider-left"></div>
      </div>
      <div class="slider--section--hideen--arrows w-slider-arrow-right">
        <div class="w-icon-slider-right"></div>
      </div>
      <div class="w-slider-nav w-shadow w-round"></div>
    </div>


  </div>
  </div>

