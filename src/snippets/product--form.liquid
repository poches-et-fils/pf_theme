  }

  img.thumbnail {
    height: 50px;
    width: 50px;
    cursor: pointer;
    transition: 0.3s;
    object-fit: none;
    padding: 3px;
    margin: 5px;
    user-select: none;
  }
  img.thumbnail.selected-thumb {
    outline: 2px solid rgba(0, 0, 0, 0.7);
