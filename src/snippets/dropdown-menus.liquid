<div class="dropdown">
  {% for link in linklists.header-menu.links %}
    <div class="dropdown-content main {{ link.title }}">
      <div class="navigation--dropdown--block">
        <div class="navigation--content--block">
          <div class="navigation--image--item">
            {% if link.title == "Men" %}
              <img src="{{section.settings.menimg | img_url: '1000x1000'}}"
                  width="200"
                  height="200"
                  sizes="(max-width: 991px) 100vw, 114px"
                  class="image" />
            {% endif %}
            {% if link.title == "Women" %}
              <img src="{{section.settings.womenimg | img_url: '1000x1000'}}"
                  width="200"
                  height="200"
                  sizes="(max-width: 991px) 100vw, 114px"
                  class="image" />
            {% endif %}
            {% if link.title == "Youth" %}
              <img src="{{section.settings.youthimg | img_url: '1000x1000'}}"
                  width="200"
                  height="200"
                  sizes="(max-width: 991px) 100vw, 114px"
                  class="image" />
            {% endif %}
            {% if link.title == "Accessories" %}
              <img src="{{section.settings.accessoriesimg | img_url: '1000x1000'}}"
                  width="200"
                  height="200"
                  sizes="(max-width: 991px) 100vw, 114px"
                  class="image" />
            {% endif %}
          </div>

          {% for sub_link in link.links %}
          <div class="navigation--dropdown--block--item">
            <a href="{{ sub_link.url }} " class="navigation--link main">{{ sub_link.title }}</a>

            {% for sub_sub_link in sub_link.links %}
              <a href="{{ sub_sub_link.url }}" class="navigation--link sub">{{ sub_sub_link.title }}</a>
            {% endfor %}
          </div>
          {% endfor %}

          <div class="navigation--dropdown--block--item">
            <a href="{{ link.url }}" class="navigation--link main">Designs</a>
            <a href="{{ link.url }}?design_type=animaux" class="navigation--link sub">Animaux</a>
            <a href="{{ link.url }}?design_type=nostalgie" class="navigation--link sub">Nostalgie</a>
            <a href="{{ link.url }}?design_type=bouffe" class="navigation--link sub">Bouffe</a>
            <a href="{{ link.url }}?design_type=patterns" class="navigation--link sub">Patterns</a>
            <a href="{{ link.url }}?design_type=fi-fille" class="navigation--link sub">Fi-fille</a>
            <a href="{{ link.url }}?design_type=collaboration" class="navigation--link sub">Collaborations</a>
            <a href="{{ link.url }}?design_type=kids" class="navigation--link sub">Kids</a>
            <a href="{{ link.url }}?design_type=drinks" class="navigation--link sub">Drinks</a>
            <a href="{{ link.url }}?design_type=été" class="navigation--link sub">Été</a>
            <a href="{{ link.url }}?design_type=mâle" class="navigation--link sub">Mâle</a>
            <a href="{{ link.url }}?design_type=sports" class="navigation--link sub">Sports</a>
            <a href="{{ link.url }}?design_type=autres" class="navigation--link sub">Autres</a>
          </div>

          <div class="navigation--dropdown--block--item">
            <a href="{{ link.url }}" class="navigation--link sub">Voir tous les motifs</a></div>
        </div>
      </div>
    </div>
  {% endfor %}
</div>
