          "type": "text",
       		"label": "Slider Paragraph",
           "default": "Commet ca la patate c&#x27;est pas un legume?"
        },
        {
          "id": "link",
          "type": "url",
          "label": "Button Link"
        },
        {
          "id": "linktext",
          "type": "text",
          "label": "Button text",
          "default": "Click here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slider",
      "category": "Elements",
      "blocks": [
        { 
          "type": "select"
        },
        {
          "type": "select"
        }
      ]
    }
  ]
}
{% endschema %}
