{% assign women = 'collections.general.women' | t %}
{% assign men = 'collections.general.men' | t %}
{% assign youth = 'collections.general.youth' | t %}
{% assign accessories = 'collections.general.accessories' | t %}

{% if collection.title contains women %}
  {% assign gender = women %}
{% elsif collection.title contains men %}
  {% assign gender = men %}
{% elsif collection.title contains youth or collection.handle contains 'bebe' or collection.handle contains 'enfant' %}
  {% assign gender = youth %}
{% else %}
  {% assign gender = accessories %}
{% endif %}
{% assign genderHandle = gender | handle %}