<div class="slider--section">
  <div data-delay="4000" data-animation="cross" data-autoplay="1" data-duration="500" data-infinite="1"  class="slider--section--slider w-slider">
    <div class="w-slider-mask">
      {% for block in section.blocks %}
        <div class="home--slider {% if forloop.index == 1 %}one{% elsif forloop.index == 2 %}two{%else%}three{%endif%} w-slide"{% if block.settings.color %} style="background-color: {{block.settings.color}};" {%endif%}>
          <div class="slider--image--overlay" style="{% if block.settings.bg-position != 'center' %}background-image: url('{{block.settings.image | img_url: '1000x1000'}}');{% endif %}{% if block.settings.bg-position == 'left' %}background-position: left;{% endif %}{% if block.settings.bg-position == 'right' %}background-position: right;{% endif %}{% if block.settings.bg-position == 'fill' %}background-size: cover;{% endif %}">
            <div class="slider--content {% if block.settings.bg-position == 'left' %}slider--content--right{% endif %}{% if block.settings.bg-position == 'right' %}slider--content--left{% endif %}{% if block.settings.bg-position == 'center' or block.settings.bg-position == 'fill' %}slider--content--center{% endif %}">
              <h1 class="slider--heading--main"  style="font-size: 55px;font-weight: 500;color: #fff;text-transform: uppercase;"> {{ block.settings.heading }}</h1>
              <h3 class="slider--heading--text" style="font-size: 20px;color: #fff;"> {{ block.settings.subtitle }}</h3>

              {% if block.settings.btn %}
              <a href="{{block.settings.url}}" style="background-color: rgba(255, 255, 255, 0.2);font-weight: 500;" class="slider--button--main w-button">{{block.settings.btn}}</a></div>
            </div>
          {%endif%}
        </div>
      {%endfor%}
    </div>

    <div class="slider--section--hideen--arrows w-slider-arrow-left">
      <div class="w-icon-slider-left"></div>
    </div>
    <div class="slider--section--hideen--arrows w-slider-arrow-right">
      <div class="w-icon-slider-right"></div>
    </div>
    <div class="w-slider-nav w-shadow w-round"></div>
  </div>
</div>

{%comment%}
Style Overrides to match merchant theme
{%endcomment%}

<style>
  /* style goes here */
  
  .slider--button--main:hover {
  background-color: #fff!important;
color: #000;
    transition-duration: 800ms;
  }

  .w-slider {height: 60vh!important; }
  .slider--container {height: 60vh!important;}

  .slider--content {
    position: absolute;
  }
  .slider--content--right {
    text-align: right;
    right: 5%;
  }
  .slider--content--left {
    text-align: left;
    left: 5%;
  }
  .slider--content--center {
    text-align: center;
    right: 0;
    left: 0;
    width: 100%;
  }

  .slider--heading--main {
    font-size: 48px !important;
  }
  
  .slider--heading--text {
    font-size: 24px !important;
  }
  
  a.slider--button--main.w-button {
    font-size: 18px !important;
  }
  
  .w-slider-nav.w-shadow.w-round {
    display: none;
  }
  
  .slider--image--overlay.centered {
    background-size: 280px;
  }
  
  @media (max-width: 796px) {
    .slider--image--overlay {justify-content: baseline!important;background-position: bottom!important;}
    .slider--content {
      float: none;
      width: 100%;
      text-align:center!important;
      right: 0;
      left: 0;
      top: 2%;
    }
  }
  

</style>

